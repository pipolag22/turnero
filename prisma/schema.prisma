// ---------- GENERATOR ----------
generator client {
  provider = "prisma-client-js"
}

// ---------- DATASOURCE ----------
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ---------- ENUMS ----------
enum Role {
  ADMIN
  BOX_AGENT
  PSYCHO_AGENT
}

enum Stage {
  LIC_DOCS_IN_SERVICE
  WAITING_PSY
  PSY_IN_SERVICE
  WAITING_LIC_RETURN
  COMPLETED
  CANCELLED
}

// ---------- MODELS ----------
model User {
  id           String   @id @default(cuid())
  email        String   @unique
  name         String
  role         Role
  office       String?
  boxNumber    Int?
  passwordHash String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([role])
  @@index([boxNumber])
}

model Ticket {
  id             String    @id @default(cuid())
  queueNumber    Int       @default(dbgenerated("nextval('ticket_number_seq'::regclass)"))
  fullName       String?
  stage          Stage
  assignedBox    Int?
  assignedUserId String?
  calledAt       DateTime?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
}

model AuditLog {
  id        String   @id @default(cuid())
  action    String
  ticketId  String?
  userId    String?
  meta      Json?
  createdAt DateTime @default(now())
}
